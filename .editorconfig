root = true

[*]
# Non-configurable Prettier behaviors
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# Configurable Prettier behaviors
end_of_line = lf
indent_style = space
indent_size = 2
max_line_length = 140

[*.{js,ts,jsx,tsx}]
indent_size = 2

[*.{json,jsonc,json5,yaml,yml,toml}]
indent_size = 2
max_line_length = unset

[*.{css,scss,sass}]
indent_size = 2

[*.html]
indent_size = 2
max_line_length = unset
trim_trailing_whitespace = true

[*.{md,mdx}]
indent_size = 2
max_line_length = unset
trim_trailing_whitespace = true

[*.sh]
indent_size = 2
max_line_length = unset
indent_style = space

[*.{conf,conf.template}]
max_line_length = unset

[*.svg]
max_line_length = unset

[*.txt]
max_line_length = unset

[*.csv]
trim_trailing_whitespace = false
max_line_length = unset
indent_size = 0

[{.env,.env.*}]
trim_trailing_whitespace = false
max_line_length = unset
indent_size = 0

[{Dockerfile,Dockerfile.*}]
indent_size = 2

[{.gitignore,.dockerignore,.prettierignore}]
trim_trailing_whitespace = false

[Makefile]
indent_size = 2
indent_style = tab
