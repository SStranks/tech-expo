{
  "name": "@apps/jest-testing-backend",
  "version": "1.0.0",
  "description": "FEM#34 Backend",
  "author": "Simon Stranks <sstranks0@gmail.com> <https://github.com/SStranks>",
  "license": "ISC",
  "main": "./dist/server.js",
  "type": "module",
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "server"
    ],
    "exec": "node --import tsx ./server/server.ts",
    "ext": "ts, js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "watch": "tsc -w",
    "compile": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "nodemon .",
    "test": "node --import tsx --test server/",
    "test:watch": "node --import tsx --test --watch **/*.test.ts"
  },
  "imports": {
    "#Shared/*": "../shared/*",
    "#Config/*": "./server/config/*",
    "#Controllers/*": "./server/controllers/*",
    "#Models/*": "./server/models/*",
    "#Routes/*": "./server/routes/*",
    "#Utils/*": "./server/utils/*"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "inquirer": "^9.2.7",
    "mongoose": "^6.6.1",
    "nanoid": "^5.0.5",
    "validator": "^13.9.0"
  },
  "devDependencies": {
    "@packages/prettier-config": "workspace:*",
    "@packages/typescript-config": "workspace:*",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.9.0",
    "@types/supertest": "^6.0.2",
    "@types/validator": "^13.7.17",
    "jest": "^29.7.0",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.6",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.0"
  }
}
