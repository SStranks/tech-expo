{
  "name": "@apps/jest-cypress-testing",
  "version": "1.0.0",
  "author": "Simon Stranks <sstranks0@gmail.com> <https://github.com/SStranks>",
  "license": "ISC",
  "type": "module",
  "main": "./src/index.tsx",
  "scripts": {
    "start": "INIT_CWD=$PWD pnpm --filter @packages/webpack-config exec webpack-dev-server --config webpack.dev.js",
    "test": "jest --config ../../../jest.config.js --selectProjects TEST-APP-FRONTEND",
    "test:coverage": "jest --coverage --config ../../../jest.config.js --selectProjects TEST-APP-FRONTEND",
    "test:watch": "jest --watch --config ../../../jest.config.js --selectProjects TEST-APP-FRONTEND",
    "cypress:run": "cypress run",
    "cypress:open": "cypress open"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@packages/babel-config": "workspace:^",
    "@packages/cypress-config": "workspace:^",
    "@packages/jest-config-react": "workspace:^",
    "@packages/prettier-config": "workspace:^",
    "@packages/typescript-config": "workspace:^",
    "@packages/webpack-config": "workspace:^",
    "@testing-library/jest-dom": "^6.4.1",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.51",
    "@types/react-dom": "^18.2.18",
    "@types/react-test-renderer": "^18.0.7",
    "cypress": "^13.6.4",
    "jest": "^29.7.0",
    "react-test-renderer": "^18.2.0",
    "sass": "^1.70.0"
  }
}
