{
  "extends": "@packages/typescript-config/react",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "#Shared/*": ["../shared/*"],
      "#Img/*": ["src/assets/img/*"],
      "#Sass/*": ["src/assets/sass/*"],
      "#Svg/*": ["src/assets/svg/*"],
      "#Components/*": ["src/components/*"],
      "#Context/*": ["src/context/*"],
      "#Data/*": ["src/data/*"],
      "#Features/*": ["src/features/*"],
      "#Hooks/*": ["src/hooks/*"],
      "#Layouts/*": ["src/layouts/*"],
      "#Lib/*": ["src/lib/*"],
      "#Pages/*": ["src/pages/*"],
      "#Services/*": ["src/services/*"],
      "#Types/*": ["src/types/*"],
      "#Utils/*": ["src/utils/*"]
    },
    "types": ["node", "@testing-library/jest-dom"]
  },
  "include": ["src/**/*", "../shared/*", "global.d.ts", "jest.config.ts", ".storybook/**/*"],
  "exclude": ["node_modules", "public", "dist", "cypress"]
}
