{
  "name": "@apps/crm-server",
  "version": "1.0.0",
  "author": "Simon Stranks <sstranks0@gmail.com> <https://github.com/SStranks>",
  "license": "ISC",
  "main": "./dist/main.js",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src",
      "dist"
    ],
    "exec": "dotenvx run -f ./.env.dev.server -- node --inspect=0.0.0.0:9229 --import tsx --inspect --no-lazy ./src/main.ts",
    "ext": "ts, js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "compile": "tsc -p tsconfig.json --noEmit && tsc-alias -p tsconfig.json",
    "codegen": "graphql-codegen --config codegen.ts --require tsconfig-paths/register",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch --require tsconfig-paths/register",
    "watch": "tsc -w",
    "db-import": "ts-node ./src/config/dbImportData.ts --import",
    "build": "pnpm run clean && tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "build:types": "tsc -p tsconfig.types.json",
    "build:sourcemap": "pnpm run clean && tsc -p tsconfig.json --sourceMap true && tsc-alias -p tsconfig.json",
    "start": "nodemon . | pino-pretty",
    "start:dist": "nodemon --exec 'dotenvx run -f ./.env.dev.server -- node .'",
    "prod": "NODE_ENV=production node .",
    "prod:dist": "dotenvx run -f ./.env.prod.server -- node .",
    "docker:build": "docker image build -f Dockerfile.prod -t $npm_package_config_dockerImageRepo:$npm_package_version .",
    "docker:postbuild": "docker image tag $npm_package_config_dockerImageRepo:$npm_package_version $npm_package_config_dockerImageRepo:latest",
    "docker:run": "docker run --name $npm_package_config_dockerImageName -d -p $npm_package_config_dockerImagePort:$npm_package_config_dockerInternalContainerPort $npm_package_config_dockerImageRepo",
    "docker:clean": "docker rm -f $npm_package_config_imageName",
    "drizzle:generate": "NODE_OPTIONS='--import tsx' drizzle-kit generate",
    "drizzle:migrate": "DRIZZLE=migrate tsx ./src/config/migrate.ts",
    "drizzle:seed": "DRIZZLE=seed tsx --inspect=0.0.0.0:9230 ./src/config/seed.ts",
    "drizzle:drop": "pnpm drizzle-kit drop",
    "drizzle:push": "NODE_OPTIONS='--import tsx' drizzle-kit push",
    "dotenv:lint": "docker run --rm -v \"$(pwd)\":/app -w /app dotenvlinter/dotenv-linter:3.3.0 dotenv-linter .env* -r",
    "vitest:test": "vitest run --config ./vitest.config.ts",
    "vitest:watch": "vitest watch --config ./vitest.config.ts",
    "vitest:list": "vitest list --filesOnly --config ./vitest.config.ts"
  },
  "config": {
    "dockerImageRepo": "techexpo/server",
    "dockerImageName": "TECHEXPO-SERVER-NodeJS-Express",
    "dockerImagePort": "4000",
    "dockerInternalContainerPort": "4000"
  },
  "imports": {
    "#App/*": "./src/app/*",
    "#Config/*": "./src/config/*",
    "#Controllers/*": "./src/controllers/*",
    "#Data/*": "./src/data/*",
    "#Graphql/*": "./src/graphql/*",
    "#Helpers/*": "./src/helpers/*",
    "#Lib/*": "./src/lib/*",
    "#Log/*": "./src/log/*",
    "#Mappers/*": "./src/mappers/*",
    "#Middleware/*": "./src/middleware/*",
    "#Models/*": "./src/models/*",
    "#Routes/*": "./src/routes/*",
    "#Services/*": "./src/services/*",
    "#Tests/*": "./src/tests/*",
    "#Types/*": "./src/types/*",
    "#Utils/*": "./src/utils/*",
    "#Views/*": "./src/views/*"
  },
  "dependencies": {
    "@apollo/server": "^5.1.0",
    "@as-integrations/express5": "^1.1.2",
    "@dotenvx/dotenvx": "^1.51.1",
    "@escape.tech/graphql-armor": "^3.1.7",
    "@graphql-tools/load-files": "^7.0.1",
    "@graphql-tools/merge": "^9.1.3",
    "@graphql-tools/schema": "^10.0.27",
    "argon2": "^0.44.0",
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dataloader": "^2.2.3",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "0.8.3",
    "express": "^5.1.0",
    "express-jwt": "^8.5.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.0",
    "graphql": "^16.12.0",
    "graphql-scalars": "^1.25.0",
    "graphql-ws": "^6.0.6",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^7.0.0",
    "ms": "^2.1.3",
    "multer": "2.0.2",
    "nanoid": "^5.1.6",
    "nodemailer": "^7.0.10",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-mongodb": "^5.0.0",
    "postgres": "^3.4.7",
    "prom-client": "^15.1.3",
    "redis": "^5.9.0",
    "rollbar": "^2.26.5",
    "sharp": "^0.34.5",
    "slugify": "^1.6.6",
    "validator": "^13.15.22",
    "ws": "^8.18.3",
    "xss": "^1.0.15",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@apps/crm-shared": "workspace:*",
    "@faker-js/faker": "^10.1.0",
    "@graphql-codegen/cli": "^6.0.1",
    "@graphql-codegen/typescript": "^5.0.2",
    "@graphql-codegen/typescript-resolvers": "^5.1.0",
    "@jest/globals": "^30.2.0",
    "@parcel/watcher": "^2.5.4",
    "@types/bcrypt": "^6.0.0",
    "@types/body-parser": "^1.19.6",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/express-serve-static-core": "^5.1.0",
    "@types/hpp": "^0.2.7",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/ms": "^2.1.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.2",
    "@types/nodemailer": "^7.0.3",
    "@types/papaparse": "^5.5.0",
    "@types/supertest": "6.0.3",
    "@types/validator": "^13.15.4",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.31.8",
    "drizzle-seed": "^0.3.1",
    "esbuild": "^0.27.1",
    "esbuild-plugin-copy": "^2.1.1",
    "jest": "^30.2.0",
    "node-mocks-http": "^1.17.2",
    "nodemon": "^3.1.10",
    "papaparse": "^5.5.3",
    "pino-pretty": "^13.1.2",
    "supertest": "7.1.4",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "vite": "^7.1.12",
    "vitest": "^4.0.8"
  }
}
