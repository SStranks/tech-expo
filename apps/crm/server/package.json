{
  "name": "@apps/crm-server",
  "version": "1.0.0",
  "author": "Simon Stranks <sstranks0@gmail.com> <https://github.com/SStranks>",
  "license": "ISC",
  "main": "./dist/server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node --inspect=0.0.0.0:9229 -r dotenv/config --import tsx --inspect --no-lazy ./src/server.ts dotenv_config_path=./.env.dev",
    "ext": "ts, js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "watch": "tsc -w",
    "db-import": "ts-node ./src/config/dbImportData.ts --import",
    "compile": "npm run clean && tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "nodemon . | pino-pretty",
    "start:dist": "nodemon --exec 'node -r dotenv/config . dotenv_config_path=./.env.dev'",
    "prod": "NODE_ENV=production node .",
    "prod:dist": "node -r dotenv/config . dotenv_config_path=./.env.prod",
    "test": "jest --config ../../../jest.config.js --selectProjects KANBAN-TASK-APP-API",
    "test:coverage": "jest --coverage --config ../../../jest.config.js --selectProjects KANBAN-TASK-APP-API",
    "test:watch": "jest --watch --config ../../../jest.config.js --selectProjects KANBAN-TASK-APP-API",
    "docker:build": "docker image build -f Dockerfile.prod -t $npm_package_config_dockerImageRepo:$npm_package_version .",
    "docker:postbuild": "docker image tag $npm_package_config_dockerImageRepo:$npm_package_version $npm_package_config_dockerImageRepo:latest",
    "docker:run": "docker run --name $npm_package_config_dockerImageName -d -p $npm_package_config_dockerImagePort:$npm_package_config_dockerInternalContainerPort $npm_package_config_dockerImageRepo",
    "docker:clean": "docker rm -f $npm_package_config_imageName",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:migrate": "tsx ./src/config/migrate.ts",
    "drizzle:drop": "pnpm drizzle-kit drop"
  },
  "config": {
    "dockerImageRepo": "techexpo/server",
    "dockerImageName": "TECHEXPO-SERVER-NodeJS-Express",
    "dockerImagePort": "4000",
    "dockerInternalContainerPort": "4000"
  },
  "imports": {
    "#App/*": "./src/app/*",
    "#Config/*": "./src/config/*",
    "#Controllers/*": "./src/controllers/*",
    "#Data/*": "./src/data/*",
    "#Graphql/*": "./src/graphql/*",
    "#Helpers/*": "./src/helpers/*",
    "#Lib/*": "./src/lib/*",
    "#Log/*": "./src/log/*",
    "#Middleware/*": "./src/middleware/*",
    "#Models/*": "./src/models/*",
    "#Routes/*": "./src/routes/*",
    "#Services/*": "./src/services/*",
    "#Tests/*": "./src/tests/*",
    "#Types/*": "./src/types/*",
    "#Utils/*": "./src/utils/*",
    "#Views/*": "./src/views/*"
  },
  "dependencies": {
    "@apollo/server": "^4.11.0",
    "@escape.tech/graphql-armor": "^3.0.1",
    "@graphql-tools/schema": "^10.0.6",
    "argon2": "^0.41.1",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.35.3",
    "express": "^5.0.0",
    "express-jwt": "^8.4.1",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.2.0",
    "graphql": "^16.9.0",
    "graphql-ws": "^5.16.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.10.0",
    "ms": "^2.1.3",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.0.7",
    "nodemailer": "^6.9.15",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0",
    "pino-mongodb": "^4.3.0",
    "postgres": "^3.4.4",
    "redis": "^4.7.0",
    "rollbar": "^2.26.4",
    "sharp": "^0.33.5",
    "slugify": "^1.6.6",
    "validator": "^13.12.0",
    "ws": "^8.18.0",
    "xss": "^1.0.15",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/ms": "^0.7.34",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.5.5",
    "@types/nodemailer": "^6.4.16",
    "@types/validator": "^13.12.2",
    "@types/ws": "^8.5.12",
    "drizzle-kit": "^0.24.2",
    "drizzle-zod": "^0.5.1",
    "nodemon": "^3.1.5",
    "pino-pretty": "^11.2.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.1"
  }
}
