{
  "name": "@apps/crm-client",
  "version": "1.0.0",
  "author": "Simon Stranks <sstranks0@gmail.com> <https://github.com/SStranks>",
  "license": "ISC",
  "type": "module",
  "main": "./src/index.tsx",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "last 2 versions"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "scripts": {
    "clean": "rm -rf dist",
    "start": "INIT_CWD=$PWD pnpm --filter @packages/webpack-config exec webpack-dev-server --config webpack.dev.js",
    "build": "INIT_CWD=$PWD pnpm --filter @packages/webpack-config exec webpack --config webpack.prod.js",
    "build:watch": "INIT_CWD=$PWD pnpm --filter @packages/webpack-config exec webpack --config webpack.dev.js --watch",
    "jest:test": "jest --config ../../../jest.config.js --selectProjects CRM-Client",
    "jest:coverage": "jest --coverage --config ../../../jest.config.js --selectProjects CRM-Client",
    "jest:watch": "jest --watch --config ../../../jest.config.js --selectProjects CRM-Client",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:test": "start-server-and-test start http://localhost:3000 cypress:run",
    "eslint:lint": "pnpm eslint ./**/*.{js,jsx,ts,tsx}",
    "stylelint:lint": "pnpm stylelint ./**/*.{css,scss}",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "sassdoc:build": "pnpm exec sassdoc ./src --dest ./.sassdoc",
    "sassdoc:serve": "http-server ./.sassdoc"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.12",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.22.0",
    "react-transition-group": "^4.4.5"
  },
  "devDependencies": {
    "@packages/babel-config": "workspace:*",
    "@packages/cypress-config": "workspace:*",
    "@packages/jest-config-react": "workspace:*",
    "@packages/prettier-config": "workspace:*",
    "@packages/types": "workspace:*",
    "@packages/typescript-config": "workspace:*",
    "@packages/webpack-config": "workspace:*",
    "@testing-library/jest-dom": "^6.4.1",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "cypress": "^13.6.4",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "react-test-renderer": "^18.2.0",
    "sass": "^1.70.0",
    "start-server-and-test": "^2.0.3"
  }
}
