{
  "extends": "../tsconfig.base.json",
  "include": ["**/*", "webpack.d.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": ["node", "webpack"]
  }
}
