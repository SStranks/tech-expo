// https://docs.cypress.io/guides/tooling/typescript-support#Configure-tsconfigjson
{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "target": "es5",
    "lib": ["es5", "dom"],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "types": ["cypress", "node"],
    "rootDir": "../"
  },
  "include": ["**/*", "../src/**/*", "cypress.d.ts", "../global.d.ts"],
  "exclude": []
}
