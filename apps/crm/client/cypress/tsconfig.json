// https://docs.cypress.io/guides/tooling/typescript-support#Configure-tsconfigjson
{
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "bundler",
    "strictNullChecks": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "target": "es6",
    "lib": ["es6", "dom"],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "rootDir": "../",
    "baseUrl": "../",
    "paths": {
      "@Img/*": ["src/assets/img/*"],
      "@Sass/*": ["src/assets/sass/*"],
      "@Svg/*": ["src/assets/svg/*"],
      "@Components/*": ["src/components/*"],
      "@Config/*": ["src/config/*"],
      "@Context/*": ["src/context/*"],
      "@Data/*": ["src/data/*"],
      "@Features/*": ["src/features/*"],
      "@Graphql/*": ["src/graphql/*"],
      "@Hooks/*": ["src/hooks/*"],
      "@Layouts/*": ["src/layouts/*"],
      "@Lib/*": ["src/lib/*"],
      "@Modules/*": ["src/modules/*"],
      "@Pages/*": ["src/pages/*"],
      "@Redux/*": ["src/redux/*"],
      "@Routes/*": ["src/routes/*"],
      "@Services/*": ["src/services/*"],
      "@Stories/*": ["src/stories/*"],
      "@Types/*": ["src/types/*"],
      "@Utils/*": ["src/utils/*"]
    },
    "types": ["cypress", "node"]
  },
  "include": ["**/*", "cypress.d.ts", "../global.d.ts", "../src"],
  "exclude": ["node_modules", "dist"]
}
